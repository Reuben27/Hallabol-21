    @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');
    * {
      font-family: 'poppins';
    }

  </style>
  <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
</head>

<body>
  <div class = "site">  
    <div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id = "mySidebar" style= "padding-left: 10px;">
      <button class="w3-bar-item w3-button w3-large" onclick="sidebar_close()" style="margin-top: 10px; margin-bottom: 10px;text-align: right;"><i class='fas fa-angle-double-left' style='font-size:36px'></i></button>
      <a href="/" class="w3-bar-item w3-button" style="font-size: 24px;text-decoration : none; text-align: center;">Home &nbsp;&nbsp;&nbsp;&emsp; <i class='fa fa-home' style='font-size:32px'></i></a>
      <a href="/" class="w3-bar-item w3-button" style="font-size: 24px;text-decoration : none; text-align: center;">Games &nbsp;&emsp; <i class='fas fa-volleyball-ball	' style='font-size:32px'></i></a>
      <a href="/" class="w3-bar-item w3-button" style="font-size: 24px;text-decoration : none; text-align: center;">Team &nbsp;&nbsp;&emsp; <i class='fas fa-user-friends' style='font-size:32px'></i></a>
    </div>

    <div id = "main"  style= "font-family : 'poppins'">
      <div class = "row sticky-top" style = "padding-right: 0px; position: sticky; top: 0 !important; background-color: black; clear: both;">
        <div class = "navbar" style = "width : 100%; padding-right: 50px;">
          <button id="openNav" class="w3-button w3-xlarge" onclick="sidebar_open()">&#9776;</button>
          <div style = "width : 200px; text-align: center;margin-left: auto; margin-right: auto; font-size: 3em;">Hallabol</div>
          <div style = "color:white;font-size: 1.5em;text-align: center; font-weight:900;"><a href="/logout" style = "outline: none; color: white;">Logout</a></div>
        </div>
      </div>

      <div class="w3-container">
        <div id="first_para" style="margin-top:20px; padding-left: 100px; padding-right: 100px; padding-bottom: 20px; font-size:x-large; margin-top: 6vh; margin-bottom: 5vh; font-weight: 500;">
          Futsal is played between two teams of five players each, one of whom is the goalkeeper. Unlimited substitutions are permitted.
        </div>
        <form name = "submit-to-google-sheet" class = "register-form" style="margin-top:20px; padding-left: 100px; padding-right: 100px; ">
          <div class="form-row">
            <div class="form-group col-md-6"> 
              <label> Team Name* </label> 
              <input name="team_name" id = "team_name" type="text" class="form-control" placeholder="Team name" required> 
            </div>          
            <div class="form-group col-md-6"> 
              <label for = "no_team"> Number of team members*</label> 
              <select name="no_team" id="no_team" class="form-control" required>
                <option value="" disabled selected style="display: none">--Please select an option--</option>
                <option>5</option>
                <!-- <option>2</option>
                <option>3</option>
                <option>4</option> -->
              </select> 
            </div>
          </div>
          <div class="form-row "> 
              <div class="form-group col-md-6"> 
                <label> Team Leader Name* </label> 
                <input name="team_leader_name" id="team_leader_name" type="text" class="form-control" placeholder="Name" required> 
              </div>
              <div class="form-group col-md-6 "> 
                <label for="email"> Team Leader Email ID* </label>
                <input  name="team_leader_email" id="team_leader_email" type = "email" class="form-control" placeholder="Email ID" required>
              </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6"> 
              <label> Team Leader Roll number *</label> 
              <input name="team_leader_roll" id="team_leader_roll" style = "-webkit-appearance: none; -moz-appearance: textfield;" type = "number" class = "form-control" placeholder="Roll Number"> 
            </div>
            <div class="form-group col-md-6"> 
              <label> Team Leader Contact Number* </label> 
              <input name="team_leader_contact" id="team_leader_contact" type="text" class="form-control" placeholder="Contact Number" pattern="[0-9]{10}" required> 
            </div>
          </div>

          <div class="form-row "> 
            <div class="form-group col-md-6"> 
              <label> Team Member 2 Name* </label> 
              <input name="team_member_2_name" id="team_member_2_name" type="text" class="form-control" placeholder="Name" required> 
            </div>
            <div class="form-group col-md-6 "> 
              <label for="email"> Team Member 2 Roll Number* </label>
              <input name="team_member_2_email" id="team_member_2_email" type="email" class="form-control" placeholder="Email ID" required>
            </div>
          </div>

          <div class="form-row "> 
            <div class="form-group col-md-6"> 
              <label> Team Member 3 Name* </label> 
              <input name="team_member_3_name" id="team_member_3_name" type="text" class="form-control" placeholder="Name" required> 
            </div>
            <div class="form-group col-md-6 "> 
              <label for="email"> Team Member 3 Roll Number* </label>
              <input name="team_member_3_email" id="team_member_3_email" type="email" class="form-control" placeholder="Email ID" required>
            </div>
          </div>

          <div class="form-row "> 
            <div class="form-group col-md-6"> 
              <label> Team Member 4 Name* </label> 
              <input name="team_member_4_name" id="team_member_4_name" type="text" class="form-control" placeholder="Name" required> 
            </div>
            <div class="form-group col-md-6 "> 
              <label for="email"> Team Member 4 Roll Number* </label>
              <input name="team_member_4_email" id="team_member_4_email" type="email" class="form-control" placeholder="Email ID" required>
            </div>
          </div>

          <div class="form-row "> 
            <div class="form-group col-md-6"> 
              <label> Team Member 5 Name* </label> 
              <input name="team_member_5_name" id="team_member_5_name" type="text" class="form-control" placeholder="Name" required> 
            </div>
            <div class="form-group col-md-6 "> 
              <label for="email"> Team Member 5 Roll Number* </label>
              <input name="team_member_5_email" id="team_member_5_email" type="email" class="form-control" placeholder="Email ID" required>
            </div>
          </div>
          <br>
          <div class="form-group submit" style = "width:100%; align-content: center;"> 
            <button type="submit" id="btnsbt_" class="btn btn-light"> Submit </button> 
          </div>
        </form>
      </div>       
    </div>  
  </div>

